<div>
  <%= form_for @event do |f| %>
  <div class="form-group"> 
  <%= f.label 'event name' %>
  <%= f.text_field :name, class: "form-control"  %><br>
  </div>

  <div class="form-group">
  <%= f.label 'event City' %>
  <%= f.text_field :city, class: "form-control"  %><br>
  </div>

  <div class="form-group">
  <%= f.label 'Country' %>
  <%= f.text_field :country, class: "form-control"  %><br>
  </div>

  <div class="form-group">
  <%= f.label 'Information' %> 
  <%= f.text_field :content, class: "form-control"  %><br>
  <div class="form-group">

  </div class="form-group">
  <%= f.label 'Time' %>
  <%= f.time_select :start_time %><br><br>
  <div class="form-group">

  </div class="form-group">
  <%= f.label 'Date' %>
  <%= f.date_select :start_day, :start_year=>2000  %><br><br>
  </div>

  <div class="actions">
  <%= f.submit class: "btn btn-primary" %>
  </div>
  <% end %>
</div>