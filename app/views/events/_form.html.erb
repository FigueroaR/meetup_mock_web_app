
<div>
  <div>
    <% if @event.errors.any? %>
      <div id="error_explanation">
        <h3><%= pluralize(@event.errors.count, "error") %> Prohibited this event from being saved:</h3>
          <ul>
            <% @event.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      </div>
    <% end %>
  </div>

<div>
  <%= form_for @event do |f| %>
  <%= f.hidden_field :admin_id, value: current_user.id %>

  <div class="form-group"> 
  <%= f.label 'event name' %>
  <%= f.text_field :name, class: "form-control"  %><br>
  </div>

  <div class="form-group">
  <%= f.label 'event City' %>
  <%= f.text_field :city, class: "form-control"  %><br>
  </div>

  <div class="form-group">
  <%= f.label 'Country' %>
  <%= f.text_field :country, class: "form-control"  %><br>
  </div>

  <div class="form-group">
  <%= f.label 'Information' %> 
  <%= f.text_field :content, class: "form-control"  %><br>
  <div class="form-group">

  </div class="form-group">
  <%= f.label 'Time' %>
  <%= f.time_select :start_time %><br><br>
  <div class="form-group">

  </div class="form-group">
  <%= f.label 'Date' %>
  <%= f.date_select :start_day, :start_year=>2000  %><br><br>
  </div>

  <div class="actions">
  <%= f.submit class: "btn btn-primary" %>
  </div>
  <% end %>
</div>