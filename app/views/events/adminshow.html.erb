<h1><%= @event.name %></h1>

  <div>
    <p>
      City: <%= @event.city%><br>
      Country: <%= @event.country %><br>
      Date: <%= @event.start_day.strftime("%Y, %B %d")%><br>
      Time: <%= @event.start_time.strftime("%I %m %p")%><br>
      Info: <%= @event.content%>
    </p>
  </div>
<br>
<hr>
<div>
    <h3>Attending</h3>
    <% @attending.each do |r| %>
        <%#binding.pry %>
        <%= link_to r.user.name, user_path(r.user) %>
    <%end%> 
</div><br><br>
<div>
  <%= form_for @rsvp do |f| %>
      <%= f.hidden_field :event_id, value: @event.id %>
      <%= f.hidden_field :created_at, value: Time.now %>
      <%= f.label "Rsvp:"%><br>
      <%= f.collection_select :user_id, User.all , :id, :name, include_blank: "Choose Your Username" %><br><br>
      <%= f.submit %>
  <% end %>
</div>
<hr>
<div>
  <h3>Comments:</h3>
  <% @comments.each do |comment| %>
      <%#= binding.pry %>
      <%= comment.user.name %>:
      <%= comment.content %><br>
  <% end %>
</div>
<br><br>
<div>
  <%= form_for @comment do |f| %>
      <%= f.hidden_field :event_id, value: @event.id %>
      <%= f.label "Leave a comment:"%><br>
      <%= f.text_area :content %><br>
      <%= f.collection_select :user_id, User.all, :id, :name, include_blank: "Choose Your Username" %><br><br>
          <button type="button" class="btn btn-primary"><%= f.submit %></button>
  <% end %>
</div><br>
<hr>

<hr>
<div>
  <button type="button" class="btn btn-primary"><%= link_to "All Events", events_path %></button> |
  <button type="button" class="btn btn-primary"><%= link_to "Edit", edit_event_path(@event), method: "patch" %></button> |
  <button type="button" class="btn btn-primary"><%= link_to "Delete", delete_event_path, method: "delete" %></button> |
  
</div> 