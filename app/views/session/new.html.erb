<h2>Sign in, thank you</h2>

<div>
  <%= form_tag('/session', method: :post) do %>

  <div class="form-group">
      <%= label_tag(:email, "Your email:") %>
      <%= text_field_tag(:email, nil, class: "form-control" )  %><br>
  </div>
  <div class="form-group">
      <%= label_tag(:password, "Your password:") %>
      <%= password_field_tag(:password, nil, class: "form-control")  %><br>
  </div>
  <div class="actions">
      <%= submit_tag('Sign in', class: "btn btn-primary") %>
  </div>
<% end %>
</div>